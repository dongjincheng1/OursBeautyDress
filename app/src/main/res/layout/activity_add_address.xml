<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.example.beautydress.Activity.AddAddressActivity"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/addAddress_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:title=""
        android:navigationIcon="@mipmap/yuike_button_xback_sp"
        android:background="#fff"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的收货地址"
                android:layout_marginTop="15dp"
                android:textSize="15sp"
                android:textColor="#7A7A7A"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/address_tittlebar_addx_un"
                android:onClick="addAddress"/>
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:orientation="vertical"
      android:gravity="center"
      >
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@mipmap/address_map_pin"
          />
      <TextView
          android:layout_marginTop="20dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="还没有收货地址哦~"
          android:textSize="15sp"
          android:textColor="#D4D4D4"/>
      <Button
          android:layout_marginTop="20dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="去添加"
          android:textColor="#fff"
          android:background="#CB0000"
          android:onClick="addAddress"/>
  </LinearLayout>

</LinearLayout>
