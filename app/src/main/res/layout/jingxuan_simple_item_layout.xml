<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    >
    <ImageView
        android:id="@+id/jx_item_img_id"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        android:src="@mipmap/test1" />
    <TextView
        android:id="@+id/jx_item_title_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:text="新品头层牛皮搭两用手挽肩背包" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        >

        <TextView
            android:id="@+id/jx_item_selling_price_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="羊299"
            android:textColor="@android:color/holo_red_light"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/jx_item_price_id"
            android:layout_toRightOf="@id/jx_item_selling_price_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="羊1199"
            android:textColor="@android:color/darker_gray"
            />

        <TextView
            android:id="@+id/jx_item_discount_id"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="2.5折"
            android:gravity="center_horizontal"
            android:background="#ff0000"
            android:textColor="#ffffff"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>


</LinearLayout>