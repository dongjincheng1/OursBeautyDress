<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.MainActivity">

    <LinearLayout
        android:id="@+id/ll_container_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/guide_tab_bg_shape"
        android:orientation="horizontal"
        >

        <RadioGroup
            android:id="@+id/rg_guide_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            >

            <RadioButton
                android:id="@+id/rb_home_id"
                style="@style/radiobuttonStyle"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/maintab_home_selector"
                android:text="首页"
                android:textSize="12sp"
                android:textColor="@drawable/tab_text_color_selector" />

            <RadioButton
                android:id="@+id/rb_9kuai9_id"
                style="@style/radiobuttonStyle"
                android:button="@null"
                android:drawableTop="@drawable/maintab_9kuai9_selector"
                android:text="九块九"
                android:textSize="12sp"
                android:textColor="@drawable/tab_text_color_selector" />

            <RadioButton
                android:id="@+id/rb_cart_id"
                style="@style/radiobuttonStyle"
                android:button="@null"
                android:drawableTop="@drawable/maintab_cart_selector"
                android:text="购物车"
                android:textSize="12sp"
                android:textColor="@drawable/tab_text_color_selector" />

            <RadioButton
                android:id="@+id/rb_space_id"
                style="@style/radiobuttonStyle"
                android:button="@null"
                android:drawableTop="@drawable/maintab_space_selector"
                android:text="我的"
                android:textSize="12sp"
                android:textColor="@drawable/tab_text_color_selector" />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>
