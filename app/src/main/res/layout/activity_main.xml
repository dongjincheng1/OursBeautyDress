<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.MainActivity">

   <LinearLayout
       android:id="@+id/ll_container_id"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1">

   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/guide_tab_bg_shape"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:gravity="center_horizontal"
        android:paddingTop="5dp"
       >

        <RadioGroup
            android:id="@+id/rg_guide_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <RadioButton
                android:id="@+id/rb_home_id"
                style="@style/radiobuttonStyle"
                android:drawableTop="@drawable/maintab_home_selector"
                android:button="@null"
                android:checked="true"
                android:text="首页" />

            <RadioButton
                android:id="@+id/rb_9kuai9_id"
                style="@style/radiobuttonStyle"
                android:drawableTop="@drawable/maintab_9kuai9_selector"
                android:button="@null"
                android:text="九块九" />

            <RadioButton
                android:id="@+id/rb_cart_id"
                style="@style/radiobuttonStyle"
                android:drawableTop="@drawable/maintab_cart_selector"
                android:button="@null"
                android:text="购物车" />

            <RadioButton
                android:id="@+id/rb_space_id"
                style="@style/radiobuttonStyle"
                android:drawableTop="@drawable/maintab_space_selector"
                android:button="@null"
                android:text="我的" />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>
