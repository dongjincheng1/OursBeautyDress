<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
>

    <!--"推荐","女装","鞋包","男装","中老年","童装","美妆","家纺"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_tab_tj_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/yuike_page_edit_barbg"
            android:gravity="center"
            android:text="推荐"
            android:clickable="true"
            />
        <TextView
            android:id="@+id/tv_tab_girl_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/yuike_page_edit_barbg"
            android:gravity="center"
            android:text="女装"
            android:clickable="true"
           />
        <TextView
            android:id="@+id/tv_tab_shose_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/yuike_page_edit_barbg"
            android:gravity="center"
            android:text="鞋包"
            android:clickable="true"/>
        <TextView
            android:id="@+id/tv_tab_men_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/yuike_page_edit_barbg"
            android:gravity="center"
            android:text="男装"
            android:clickable="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_tab_older_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/yuike_page_edit_barbg"
            android:gravity="center"
            android:text="中老年"
            android:clickable="true"/>
        <TextView
            android:id="@+id/tv_tab_child_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/yuike_page_edit_barbg"
            android:gravity="center"
            android:text="童装"
            android:clickable="true"/>
        <TextView
            android:id="@+id/tv_tab_meizhuang_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/yuike_page_edit_barbg"
            android:gravity="center"
            android:text="美妆"
            android:clickable="true"/>
        <TextView
            android:id="@+id/tv_tab_jiafang_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/yuike_page_edit_barbg"
            android:gravity="center"
            android:text="家纺"
            android:clickable="true"/>
    </LinearLayout>

</LinearLayout>
